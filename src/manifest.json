{
    "name": "TGD plugin",
    "version": "0.1.3",
    "description": "TGD plugin",
    "manifest_version": 2,
    "permissions": [
        "declarativeContent",
        "storage",
        "alarms",
        "https://tgd.kr/"
    ],
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html"
    }
}